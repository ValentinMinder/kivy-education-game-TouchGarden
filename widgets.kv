#:import KIVY_DEFAULT_FONT settings.KIVY_DEFAULT_FONT
<Label>:
    font_name: KIVY_DEFAULT_FONT
    font_size: 32
    color: 0, 0, 0, 1
    halign: 'center'
    valign: 'middle'
    markup: True
    text_size: self.size

# Background colored labels are in LabelB and LabelC, a subclass on-the-fly
<LabelC>:
    canvas.before:
        Color:
            rgb: 0, 0, 1 # your color here
        Rectangle:
            pos: self.pos
            size: self.size

<LabelB>:
    background_color: 1,1,1,1
    canvas.before:
        Color:
            rgba: self.background_color
        Rectangle:
            pos: self.pos
            size: self.size


<LabelWrap>:
    label: label
    LabelB:
        id: label
        background_color: 1,1,1,0

<ElementScatter>
    image: imag
    Image:
        id: imag
        on_touch_down: root.parent.parent.currentObj = self.parent


<Button>:
    valign: 'middle'
    halign: 'center'
    color: 0, 0, 0, 1
    border: 25, 25, 25, 25

<ToggleButton>
    background_normal: ''
    background_down: ''
    background_disabled_normal: ''
    background_disabled_down: ''

<ButtonStar>:
    color: 0, 0, 0, 1
    valign: 'middle'
    size_hint: None, None
    size: 150, 150
    background_normal: "images/quiz/768px-Grey_Star.svg.png"
    background_down: "images/quiz/768px-Gold_Star.svg.png"

<ButtonCategory>:
    color: 0, 0, 0, 1
    valign: 'bottom'
