#:import color utils.texts.color
<StatsScreen>:
    star_fr: star_fr
    star_de: star_de
    vde: vde
    vfr: vfr
    BoxLayout:

        orientation: 'vertical'
        padding: 10
        spacing: 50
        size_hint: 1, 1

        LabelB:
            text: 'Merci d\'évaluer l\'exposition pour participer au concours'
            background_color: color.back_grey
            size_hint: 1, 0.4

        BoxLayout:
            orientation: 'horizontal'
            size_hint: 1, 1
            id: star_fr

        Button:
            id: vfr
            size_hint: 1, 0.4
            text: 'Enregistrer'
            disabled: True
            on_press: root.validate_fr()

        LabelB:
            background_color: color.back_grey_dark
            font_size: '12dp'
            size_hint: 1, 0.05

        LabelB:
            text: 'Bitte geben Sie uns eine Note'
            background_color: color.back_grey
            size_hint: 1, 0.4

        BoxLayout:
            orientation: 'horizontal'
            size_hint: 1, 1
            id: star_de

        Button:
            id: vde
            size_hint: 1, 0.4
            text: 'Speichern'
            disabled: True
            on_press: root.validate_de()


<QuestionWidget>
    q: q
    r: r
    orientation: 'vertical'
    size_hint: 1, 1
    LabelB:
        id: q
        background_color: (0.2,0.2,0.2,1)
    BoxLayout:
        id: r
        spacing: 10
        orientation: 'horizontal'
        size_hint: 1, 1

<ContestIntroScreen>:
    BoxLayout:
        orientation: 'vertical'
        size_hint: 1, 1
        padding: 20
        spacing: 20
        LabelB:
            text: 'Merci pour ton évaluation. Tu peux maintenant participer au concours en répondant correctement à quelques questions.'
        LabelB:
            text: 'Merci de renseigner le contexte de votre visite'
        BoxLayout:
            orientation: 'horizontal'
            size_hint: 1, 1
            ButtonCategory:
                text: 'Enfant'
                background_normal: "images/picto_family.png"
                on_press: root.forward()
            ButtonCategory:
                text: 'Adultes'
                background_normal: "images/picto_school.png"
                on_press: root.forward()

