<Screen>:
    canvas.before:
        Color:
            rgb: 1, 1, 1 # your color here
        BorderImage:
            size: root.size
            pos: root.pos
            #source: "images/fd2_frame2.png"
            border: 25, 25, 25, 25

<LoadingScreen>:
    BoxLayout:
        size_hint: 0.5, 0.2
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        orientation: 'vertical'
        Label:
            text: 'Loading...'
        Image:
            source: 'images/ajax-loader-light.gif'

<MainMenuScreen>:
    layout: layout
    BoxLayout:
        id: layout
        orientation: 'vertical'
        padding: 0
        spacing: 20
        size_hint: 0.5, 1
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        Button:
            text: 'Test texts size'
            on_press: root.test()
        Button:
            text: 'Test static game'
            on_press: root.game()
        Button:
            text: 'Test new game'
            on_press: root.floatgame()
        Button:
            text: 'Test start screen'
            on_press: root.start()
        Button:
            text: 'Test animations'
            on_press: root.animations()
        Button:
            text: 'Test graphics'
            on_press: root.graphics()
        Button:
            text: 'Test ALL graphics'
            on_press: root.allgraphics()
        Button:
            text: 'Test statistics'
            on_press: root.stats()

<StartScreen>
    layout: layout
    FloatLayout:
        Image:
            source: 'images/fond/game.png'
        LabelB:
            background_color: 1,1,1,0.3
        BoxLayout:
            orientation: 'vertical'
            padding: 10
            spacing: 10
            size_hint: 0.7, 0.9
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
