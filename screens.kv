<GameScreen>:
    layout: layout

    BoxLayout:
        id: layout
        orientation: 'horizontal'
        padding: 0
        spacing: 0
        BoxLayout:
            id: layout
            orientation: 'vertical'
            size_hint: 0.15, 1
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            Image:
                id: garden
                allow_stretch: False
                size_hint: 1, 1
                pos_hint: {'x': 0, 'top': 1}
                top: root.top
                width: 171
                source: 'images/test1_haie.png'
            Image:
                allow_stretch: False
                pos_hint: {'x': 0, 'top': 1}
                source: 'images/non_animes/bac_herbes_aromatiques.png'
            Image:
                allow_stretch: True
                pos_hint: {'x': 0, 'top': 1}
                source: 'images/non_animes/bac_herbes_aromatiques.png'

            DragLabel:
                text: 'I am a draggable text'
                background_color: 0,0.5,0,0.5
            Button:
                text: 'El 3'
                allow_stretch: False
                background_normal: "images/test1_haie_bad.png"

        Image:
            id: garden
            allow_stretch: False
            size_hint: 0.75, 1
            pos_hint: {'x': 0, 'top': 1}
            top: root.top
            height: 768
            width: 1024
            source: 'images/fond/fond_jardin_v4.png'
        BoxLayout:
            id: layout
            orientation: 'vertical'
            size_hint: 0.1, 1
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            Label:
                text: 'Score'
            Image:
                allow_stretch: False
                source: 'images/animations/bonhomme/homme_positif_content_2.gif'
            Image:
                allow_stretch: False
                source: 'images/non_animes/cone_arbre_antipredateur.png'

            DragLabel:
                text: 'I am another draggable text'
                background_color: 0,0,0.5,0.5
            Button:
                text: 'STOP'
                on_press: root.back()
                size_hint_y: 0.5

