<Screen>:
    canvas.before:
        BorderImage:
            size: root.size
            pos: root.pos
            #source: "images/fd2_frame2.png"
            border: 25, 25, 25, 25

<LoadingScreen>:
    BoxLayout:
        size_hint: 0.5, 0.2
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        orientation: 'vertical'
        Label:
            text: 'Loading...'
        Image:
            source: 'images/ajax-loader-light.gif'

<MainMenuScreen>:
    layout: layout
    BoxLayout:
        id: layout
        orientation: 'vertical'
        padding: 0
        spacing: 20
        size_hint: 0.5, 1
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        Button:
            text: 'Test texts size'
            on_press: root.test()
        Button:
            text: 'Test game'
            on_press: root.game()
        Button:
            text: 'Test animations'
            on_press: root.animations()
        Button:
            text: 'Test graphics'
            on_press: root.graphics()
        Button:
            text: 'Test ALL graphics'
            on_press: root.allgraphics()
        Button:
            text: 'Test statistics'
            on_press: root.stats()

