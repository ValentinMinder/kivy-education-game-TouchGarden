<StatsScreen>:
    layoutd: layoutd
    BoxLayout:

        orientation: 'vertical'
        padding: 10
        spacing: 20
        size_hint: 1, 1

        LabelB:
            text: 'Merci d\'évaluer l\'exposition'
            font_size: '60dp'
            size_hint: 1, 0.25

        BoxLayout:
            orientation: 'horizontal'
            id: stars
            size_hint: 1, 1
            ButtonStar:
                text: 'A améliorer'
            ButtonStar:
                text: 'Suffisant'
            ButtonStar:
                text: 'Bien'
            ButtonStar:
                text: 'Très bien'
            ButtonStar:
                text: 'Excellent'

        BoxLayout:
            orientation: 'horizontal'
            id: layoutd
            size_hint: 1, 1
            ButtonCategory:
                text: 'Famille'
                background_normal: "images/picto_family.png"
            ButtonCategory:
                text: 'Ecole/groupe'
                background_normal: "images/picto_school.png"
                on_press: root.confirm()
            ButtonCategory:
                text: 'Adultes seuls'
                background_normal: "images/picto_couple.png"
                on_press: root.back()

<ConfirmStatsScreen>:
    Button:
        text: 'Réponse prise en compte, merci'
        font_size: '160dp'
        size_hint: 1, 1
        on_press: root.back()