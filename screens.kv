<Screen>:
    canvas.before:
        Color:
            rgb: 1, 1, 1 # your color here
        BorderImage:
            size: root.size
            pos: root.pos
            #source: "images/fd2_frame2.png"
            border: 25, 25, 25, 25


#:import txt utils.texts
<StartScreen>
    layout: layout
    FloatLayout:
        id: layout
        Image:
            source: 'images/fond/game.png'
        LabelB:
            background_color: 1,1,1,0.35


#:import color utils.texts.color
<StatsScreen>:
    star_fr: star_fr
    star_de: star_de
    vde: vde
    vfr: vfr
    BoxLayout:

        orientation: 'vertical'
        padding: 10
        spacing: 30
        size_hint: 1, 1

        LabelB:
            text: txt.txt_quiz_intro_fr
            background_color: color.back_grey
            size_hint: 1, 0.4

        BoxLayout:
            orientation: 'horizontal'
            size_hint: 1, 1
            id: star_fr

        Button:
            id: vfr
            size_hint: 1, 0.4
            text: txt.txt_quiz_intro_conf_fr
            disabled: True
            on_press: root.validate_fr()

        LabelB:
            background_color: color.back_grey_dark
            font_size: '12dp'
            size_hint: 1, 0.05

        LabelB:
            text: txt.txt_quiz_intro_de
            background_color: color.back_grey
            size_hint: 1, 0.4

        BoxLayout:
            orientation: 'horizontal'
            size_hint: 1, 1
            id: star_de

        Button:
            id: vde
            size_hint: 1, 0.4
            text: txt.txt_quiz_intro_conf_de
            disabled: True
            on_press: root.validate_de()


<QuestionWidget>
    q: q
    r: r
    orientation: 'vertical'
    size_hint: 1, 1
    LabelB:
        id: q
        background_color: (0.2,0.2,0.2,1)
    BoxLayout:
        id: r
        spacing: 10
        orientation: 'horizontal'
        size_hint: 1, 1

<ContestIntroScreen>:
    l: l
    BoxLayout:
        orientation: 'vertical'
        size_hint: 1, 1
        padding: 20
        spacing: 20
        LabelB:
            size_hint: 1, 0.2
            text: txt.txt_quiz_conf.get()
        BoxLayout:
            id: l
            orientation: 'vertical'
            size_hint: 1, 0.8
            spacing: 20

