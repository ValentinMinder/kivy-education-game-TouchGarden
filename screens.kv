<GameScreen>:
    layout: layout

    BoxLayout:
        id: layout
        orientation: 'horizontal'
        padding: 0
        spacing: 0
        BoxLayout:
            id: layout
            orientation: 'vertical'
            size_hint: 0.15, 1
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}

            Label:
                text: 'Categorie\n haies'
                font_size: '36dp'

            Image:
                id: garden
                allow_stretch: False
                size_hint: 1, 1
                pos_hint: {'x': 0, 'top': 1}
                top: root.top
                width: 171
                source: 'images/test1_haie.png'
            Label:
                size_hint: 1, 0.2
                text: 'buisson'

            Image:
                allow_stretch: False
                pos_hint: {'x': 0, 'top': 1}
                source: 'images/non_animes/bac_herbes_aromatiques.png'

            Label:
                size_hint: 1, 0.2
                text: 'herbes aromatiques'
            Label:
                text: ''

            Label:
                text: '1 / 7'
                font_size: '48dp'
                size_hint_y: 0.5
            Button:
                text: 'Next'
                allow_stretch: False
                size_hint_y: 0.3

        Image:
            id: garden
            allow_stretch: False
            size_hint: 0.75, 1
            pos_hint: {'x': 0, 'top': 1}
            top: root.top
            height: 768
            width: 1024
            source: 'images/fond/fond_jardin_v4.png'
        BoxLayout:
            id: layout
            orientation: 'vertical'
            size_hint: 0.1, 1
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            Label:
                text: 'Score'
                size_hint: 1, 0.05
            Label:
                text: '3 pt'
                font_size: '48dp'
                size_hint: 1, 0.15
            Image:
                allow_stretch: False
                source: 'images/thermometre-scaled.png'

            Button:
                text: 'STOP'
                on_press: root.back()
                size_hint: 1, 0.1

