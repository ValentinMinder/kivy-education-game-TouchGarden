<Screen>:
    canvas.before:
        Color:
            rgb: 1, 1, 1 # your color here
        BorderImage:
            size: root.size
            pos: root.pos
            #source: "images/fd2_frame2.png"
            border: 25, 25, 25, 25


#:import txt utils.texts
<StartScreen>
    layout: layout
    FloatLayout:
        id: layout
        Image:
            source: 'images/fond/game.png'
        LabelB:
            background_color: 1,1,1,0.40


#:import color utils.texts.color
<StatsScreen>:
    star_fr: star_fr
    star_de: star_de
    logo: logo
    FloatLayout:
        LabelB:
            background_color: color.back_blue_dark

        BoxLayout:
            orientation: 'vertical'
            padding: 10
            spacing: 30
            size_hint: 1, 1

            BoxLayout:
                orientation: 'horizontal'
                size_hint: 1, 0.5

                Button:
                    size_hint: 0.05, 1
                    on_press: root.calibrate()
                    background_normal: 'images/scenery/transparency.png'

                LabelB:
                    text: txt.txt_quiz_title.get()
                    background_color: color.back_no_color
                    font_size: '60dp'
                    size_hint: 0.90, 1

                Button:
                    size_hint: 0.05, 1
                    on_press: root.check_stop()
                    background_normal: 'images/scenery/transparency.png'

            LabelB:
                text: txt.txt_quiz_intro_fr.get()
                background_color: color.back_no_color
                size_hint: 1, 0.3

            BoxLayout:
                orientation: 'horizontal'
                size_hint: 1, 1
                id: star_fr

            LabelB:
                text: txt.txt_scenery_notxt.get()
                background_color: color.back_no_color
                size_hint: 1, 0.05

            LabelB:
                background_color: color.back_grey_dark
                font_size: '12dp'
                size_hint: 1, 0.1

            LabelB:
                text: txt.txt_quiz_intro_de.get()
                background_color: color.back_no_color
                size_hint: 1, 0.3

            BoxLayout:
                orientation: 'horizontal'
                size_hint: 1, 1
                id: star_de

            BoxLayout:
                orientation: 'horizontal'
                size_hint: 1, 0.8

                Button:
                    size_hint: 0.05, 1
                    background_normal: 'images/scenery/transparency.png'

                LabelB:
                    text: txt.txt_quiz_intro_bye.get()
                    background_color: color.back_no_color
                    size_hint: 0.65, 1

                #TODO: smaller logo + button for calibration / test / stop
                LabelB:
                    id: logo
                    background_color: color.back_no_color
                    text: '-'
                    size_hint: 0.05, 0.25
                    font_size: '12dp'
                Button:
                    size_hint: 0.05, 1
                    on_press: root.switch_color()
                    background_normal: 'images/scenery/transparency.png'

<QuestionWidget>
    q: q
    r: r
    orientation: 'vertical'
    size_hint: 1, 1
    LabelB:
        id: q
        background_color: color.back_grey
        size_hint: 1, 0.3
    LabelB:
        background_color: color.back_no_color
        size_hint: 1, 0.05
    BoxLayout:
        id: r
        spacing: 10
        orientation: 'horizontal'
        size_hint: 1, 1

<ContestIntroScreen>:
    l:l
    timer: timer
    BoxLayout:
        orientation: 'vertical'
        size_hint: 1, 1
        padding: 20
        spacing: 20
        LabelB:
            size_hint: 1, 0.2
            text: txt.txt_quiz_conf.get()
        BoxLayout:
            id: l
            orientation: 'vertical'
            size_hint: 1, 0.8
            spacing: 20
        LabelB:
            id: timer
            background_color: color.back_grey
            size_hint: 0.2, 0.1

