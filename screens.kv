                Button:
                    text: 'DEUTSCH'
                    background_normal: 'images/flags/german.jpg'
                    on_press: root.german()
                Button:
                    text: 'ENGLISH'
                    background_normal: 'images/flags/english.png'
                    on_press: root.english()
            BoxLayout:
                orientation: 'horizontal'
                padding: 0
                spacing: 50
                Button:
                    text: 'DEMARRER'
                    background_normal: 'images/flags/fr.png'
                    on_press: root.french()
                Button:
                    text: 'STARTEN'
                    background_normal: 'images/flags/de.png'
                    on_press: root.german()
